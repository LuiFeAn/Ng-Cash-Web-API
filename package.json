{
  "name": "back-end",
  "version": "1.0.0",
  "description": "Projeto criado para o teste t√©cnico do processo seletivo da NG ",
  "main": "index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon -e ts,json src/server.ts",
    "generate-migration":"npm run typeorm migration:generate -- -d ./src/app/database/index.ts ./src/app/database/migrations/migration",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate": "npm run typeorm -- -d ./src/app/database/index.ts migration:run",
    "revert": "npm run typeorm migration:revert -- -d ./src/app/database/index.ts",
    "deploy": "npm run typeorm:migrate && npm run build && npm run start",
    "test": "jest --runInBand",
    "build": "tsc"
  },
  "author": "Luis Fernando",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1"
  }
}
